<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delivery.DeliveryUploadActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@color/primary"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="Customer"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text=":"
                            android:layout_width="2dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginStart="7dp"
                            android:id="@+id/txtDNCustomerUpload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="Alamat"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text=":"
                            android:layout_width="2dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginStart="7dp"
                            android:id="@+id/txtDNAlamatUpload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:text="Telp"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text=":"
                            android:layout_width="2dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginStart="7dp"
                            android:id="@+id/txtDNTelpUpload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageDeliveryCustomerView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="24dp"
                app:srcCompat="@drawable/ic_picture" />
            <TextView
                android:id="@+id/textDeliveryUploadCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-light"
                android:text="Tap to Select Image"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/progressBarDeliveryUpload"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                tools:progress="40" />

            <Button
                android:id="@+id/btnDeliveryUploadCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Image"
                android:background="@drawable/btn_custom"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".realtimeLocation.LocationActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtLocationLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lalitude"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtLocaationLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:textSize="25sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnLocationStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start get Location"
        android:background="@drawable/btn_menu_custom"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btnLocationStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop get Location"
        android:background="@drawable/btn_menu_custom"
        android:layout_marginTop="20dp"/>

</LinearLayout>